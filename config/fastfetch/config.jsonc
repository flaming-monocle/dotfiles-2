            "type": "shell",
            "key": "SH   ",
            "keyColor": "34", 
        },
        {
            "type": "wm",
            "key": "WM   ",
            "keyColor": "34", 
        },
        {
            "type": "terminal",
            "key": "TE   ",
            "keyColor": "34",
        },
        {
            "type": "terminalfont",
            "key": "TF   ",
            "keyColor": "34", 
        },
        {
            "type": "host",
