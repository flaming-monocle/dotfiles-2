{
    "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
    "logo": {
        "type": "kitty-direct",
        "source": "~/.config/fastfetch/gruvbox-dark-blue-square.png",
        //"source": "~/.config/fastfetch/nix-14.txt",
        "width": 30,
        "height": 14,
    },
    "display": {
          "separator": ""
